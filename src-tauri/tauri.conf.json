{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickNote",
  "version": "1.0.1",
  "identifier": "com.quicknote.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "app": {
    "windows": [
      {
        "label": "panel-window",
        "title": "Quick Note",
        "url": "panel.html",
        "width": 320,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  }
}
